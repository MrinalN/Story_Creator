
<h1>This is contributions page</h1>

<% for (let contribution of data) { %>
    <h3><%= contribution['content'] %> <%= contribution['likes'] %> ...id=<%= contribution['id'] %></h3>
    <form method="POST" action="/stories/<%= contribution['story_id'] %>/contributions/<%= contribution['id'] %>"> 
        <div class="form-group row">
            <div class="col-sm-8">
              <button type="submit" class="btn btn-primary ">ADD to STORY</button>
            </div>
    </form>
    <form method="post" action="/stories/<%=contribution['story_id'] %>/contributions/<%= contribution['contribution_id']%>/delete"> 
      <div class="form-group row">
          <div class="col-sm-8">
            <button type="submit" class="btn btn-primary ">DELETE</button>
          </div>
  </form>
  <form method="post" action="/stories/<%=contribution['story_id'] %>/contributions/<%= contribution['contribution_id']%>/likes"> 
    <div class="form-group row">
        <div class="col-sm-8">
          <button type="submit" class="btn btn-primary ">LIKES</button>
        </div>
</form>
<%= contribution.likes %>

<% } %>



